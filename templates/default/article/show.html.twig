{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h3>{{ article.title }}</h3>
    <div class="row">
    {% if article.imageFilename is not empty %}
        <div class="col-md-12">
            <img class="img-fluid" src="/{{image_directory}}/{{ article.imageFilename }}">
        </div>
    {% endif %}
    <div class="col-md-12">
        {{ article.content|raw }}
    </div>
    <a href="{{ path('default_index') }}">back to list</a>
{% endblock %}
