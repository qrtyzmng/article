{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>Articles</h1>
    </div>
    {% for article in articles %}
        <div class="card mt-2">
            <div class="card-body">
                <h5 class="card-title">{{article.title}}</h5>
                <p class="card-text">{{ article.content|shortContent }}</p>
                <a href="{{ path("default_article_show", {"id": article.id}) }}" class="btn btn-primary">Details</a>
            </div>
        </div>
    {% endfor %}
    <div class="navigation">
        {{ knp_pagination_render(articles) }}
    </div>
{% endblock %}
